<?xml version="1.0"?>
<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
    oid="0caf2f69-7c72-4946-b218-d84e78b2a057">
    <name>template-org-department</name>
    <mapping>
        <strength>strong</strength>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <oid>ffa9eaec-9539-4d15-97aa-24cd5b92ca5b</oid>     <!--  metarole-department -->
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
    </mapping>
    <item>
        <ref>identifier</ref>
        <mapping>
            <strength>strong</strength>
            <source>
                <path>extension/grouperName</path>
            </source>
            <expression>
                <script>
                    <code>
                        grouperName?.substring(9)           // from ref:dept:xxx
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
    <item>
        <ref>name</ref>
        <mapping>
            <strength>strong</strength>
            <source>
                <path>identifier</path>
            </source>
            <expression>
                <script>
                    <code>
                        'department_' + identifier
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
    <item>
        <ref>displayName</ref>
        <mapping>
            <strength>strong</strength>
            <source>
                <path>identifier</path>
            </source>
        </mapping>
    </item>    
</objectTemplate>